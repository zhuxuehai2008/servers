<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.0.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd">

	<!-- 自动扫描且只扫描@Controller -->
	<context:component-scan base-package="com.zxh.interfaces,com.zxh.core.component,,com.zxh.core.dao" use-default-filters="true">
<!-- 		<context:include-filter type="annotation" expression="org.springframework.stereotype.Controller"/>
		<context:include-filter type="annotation" expression="org.springframework.web.bind.annotation.ControllerAdvice"/> -->
	</context:component-scan>
 	<mvc:annotation-driven/>
	
	<!-- 定义JSP文件的位置 --> 
	<bean class="org.springframework.web.servlet.view.InternalResourceViewResolver">
		<property name="prefix" value="/WEB-INF/views/"/>
		<property name="suffix" value=".jsp"/>
	</bean>
	<!-- 容器默认的DefaultServletHandler处理 所有静态内容与无RequestMapping处理的URL-->	
	<mvc:default-servlet-handler/>
	<!-- 定义无需Controller的url<->view直接映射 -->
	<mvc:view-controller path="/" view-name="redirect:/index"/>
	<!-- 配置拦截器 -->
	<mvc:interceptors>    
   		<mvc:interceptor>    
        <!-- 匹配的是url路径， 如果不配置或/**,将拦截所有的Controller -->  
        	<mvc:mapping path="/**" />
        	<mvc:exclude-mapping path="/login"/>
        	<mvc:exclude-mapping path="/static/**"/>
        	<bean id = "interceptor" class= "com.zxh.core.interceptor.AuthorizeInterceptor">
        		<property name="limitDefinition" >
        			<value>
        			/neural/test = authc
        			/neural/index = user
        			/neural/.* = anon
        			</value>
        		</property>
        	</bean>
        </mvc:interceptor>
     </mvc:interceptors>
     <bean id="stringConverter"  
        class="org.springframework.http.converter.StringHttpMessageConverter"> 
        <property name="writeAcceptCharset" value="false" /> 
        <property name="supportedMediaTypes">  
            <list>  
                <value>text/plain;charset=UTF-8</value>  
            </list>  
        </property>  
    </bean> 
    <bean id="jsonConverter"  class="org.springframework.http.converter.json.MappingJackson2HttpMessageConverter"></bean> 
    <bean  class="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerAdapter">  
        <property name="messageConverters">  
            <list>  
                <ref bean="stringConverter" />  
                <ref bean="jsonConverter" />  
            </list>  
        </property> 
    </bean>
         <!-- 1.配置jdbc文件 -->
	 <!-- <import resource="classpath:spring-mybatis.xml"/> -->
</beans>
